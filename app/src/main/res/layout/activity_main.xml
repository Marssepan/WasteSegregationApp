<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFF8E7">

    <!-- Search Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        android:background="#FFEBE8"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:clipToPadding="false"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp">

        <EditText
            android:id="@+id/search_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter waste item name"
            android:padding="8dp"
            android:backgroundTint="#FFB3B3"
            android:textColorHint="#9E9E9E"
            android:textColor="#000"
            android:background="@drawable/rounded_edittext" />

        <Button
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Search"
            android:backgroundTint="#FFD3BA"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:textColor="#000"/>
    </LinearLayout>

    <!-- Result Text -->
    <TextView
        android:id="@+id/result_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result will appear here"
        android:textColor="#6E6E6E"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp" />

    <!-- Image Section -->
    <ImageView
        android:id="@+id/image_view"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:contentDescription="Trash Image"
        android:background="#FFCCCC"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"/>

    <!-- Button: Take Picture -->
    <Button
        android:id="@+id/take_picture_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Picture of Trash"
        android:layout_gravity="center"
        android:backgroundTint="#FFD3BA"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:layout_marginBottom="16dp"
        android:textColor="#000"/>

    <!-- Button: Display All -->
    <Button
        android:id="@+id/display_all_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display All Waste Items"
        android:layout_gravity="center"
        android:backgroundTint="#FFD3BA"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:textColor="#000"/>
</LinearLayout>